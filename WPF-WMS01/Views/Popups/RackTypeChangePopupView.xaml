<Window x:Class="WPF_WMS01.Views.Popups.RackTypeChangePopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vmPopups="clr-namespace:WPF_WMS01.ViewModels.Popups"
        mc:Ignorable="d"
        Title="랙 타입 변경 확인" Height="200" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="Height">

    <!-- <Window.DataContext>
        <vmPopups:RackTypeChangePopupViewModel d:IsDataSource="True"/>
    </Window.DataContext> -->

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="랙 타입 변경 확인" FontWeight="Bold" FontSize="18" Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <TextBlock Grid.Row="1" Text="{Binding Message}" TextWrapping="Wrap" FontSize="14"
                   HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="확인 (OK)" Command="{Binding OkCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Margin="0,0,10,0" Padding="15,5"/>
            <Button Content="취소 (Cancel)" Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Padding="15,5"/>
        </StackPanel>
    </Grid>
</Window>