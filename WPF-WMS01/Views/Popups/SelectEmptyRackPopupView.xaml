<Window x:Class="WPF_WMS01.Views.Popups.SelectEmptyRackPopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_WMS01.Views.Popups"
        xmlns:viewmodels="clr-namespace:WPF_WMS01.ViewModels.Popups"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewmodels:SelectEmptyRackPopupViewModel}"
        Title="빈 랙 선택" Height="700" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   FontSize="22" FontWeight="Bold" Margin="10,0,0,10">
            <Run Text="Lot No. : "/>
            <Run Text="{Binding LotNo}"/> <Run Text="{Binding FirstMessage}"/>
            <LineBreak/> <LineBreak/> <Run Text="아래 리스트에서"/>
            <LineBreak/> <Run Text="{Binding SecondMessage}"/> <Run Text=" 가 적재될 랙을 선택해 주세요."/>
        </TextBlock>

        <ListView Grid.Row="1" ItemsSource="{Binding Racks}"
                  SelectedItem="{Binding SelectedRack}"
                  DisplayMemberPath="Title"
                  SelectionMode="Single"
                  Margin="5,5,5,35"
                  FontSize="40" FontWeight="SemiBold">
        </ListView>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="확인" Command="{Binding ConfirmCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Width="150" Height="50" FontSize="20" Margin="0,0,20,0"/>
            <Button Content="취소" Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Width="150" Height="50" FontSize="20"/>
        </StackPanel>
    </Grid>
</Window>