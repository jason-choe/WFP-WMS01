<Window x:Class="WPF_WMS01.Views.Popups.SelectEmptyRackPopupView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_WMS01.Views.Popups"
        xmlns:viewmodels="clr-namespace:WPF_WMS01.ViewModels.Popups"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=viewmodels:SelectEmptyRackPopupViewModel}"
        Title="빈 랙 선택" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="제품을 입고할 빈 랙을 선택하십시오:"
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <ListBox Grid.Row="1" ItemsSource="{Binding Racks}"
                 SelectedItem="{Binding SelectedRack}"
                 SelectionMode="Single"
                 Margin="0,0,0,10"
                 BorderBrush="LightGray" BorderThickness="1">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
                        <TextBlock Text="{Binding ImageIndex, StringFormat=' (빈 임시 보관 랙)'}" FontSize="16" VerticalAlignment="Center" Margin="5,0,0,0"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="확인"
                    Command="{Binding ConfirmCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Width="120" Height="40" FontSize="18" Margin="0,0,10,0"/>
            <Button Content="취소"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                    Width="120" Height="40" FontSize="18"/>
        </StackPanel>
    </Grid>
</Window>